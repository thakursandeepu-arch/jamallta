rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }
    function isAdminEmail() {
      return signedIn() && request.auth.token.email == "thakursandeepu@gmail.com";
    }

    // Lock down users collection: only admin email can write.
    match /users/{uid} {
      allow read: if signedIn();
      allow create, update, delete: if isAdminEmail();
    }

    // Media: public read for website, admin-only write.
    match /media/{mediaId} {
      allow read: if true;
      allow create, update, delete: if isAdminEmail();
    }

    // Default: signed-in users can read/write other collections.
    match /{document=**} {
      allow read, write: if signedIn();
    }
  }
}
